{
  "name": "super-linter-api",
  "version": "1.0.0",
  "description": "HTTP API layer for Super-linter providing Kroki-style REST endpoints for code linting",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/server.ts",
    "start": "node dist/server.js",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src/**/*.ts",
    "db:migrate": "tsx scripts/migrate.ts",
    "db:reset": "rm -f data/*.db && pnpm db:migrate"
  },
  "keywords": [
    "linter",
    "api",
    "super-linter",
    "code-quality",
    "rest"
  ],
  "author": "wangshijun",
  "license": "MIT",
  "packageManager": "pnpm@10.6.5",
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "eslint": "^9.34.0",
    "jest": "^30.0.5",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.1",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "better-sqlite3": "^12.2.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "helmet": "^8.1.0",
    "tar": "^7.4.3",
    "winston": "^3.17.0",
    "zlib": "^1.0.5",
    "zod": "^4.1.0"
  }
}
