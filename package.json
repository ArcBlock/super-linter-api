{
  "name": "super-linter-api",
  "version": "0.1.5",
  "description": "HTTP API layer for Super-linter providing Kroki-style REST endpoints for code linting",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/server.ts",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src/**/*.ts",
    "type-check": "tsc --noEmit",
    "db:migrate": "tsx scripts/migrate.ts",
    "db:reset": "rm -f data/*.db && pnpm db:migrate",
    "docker:build": "./scripts/build.sh",
    "docker:run": "docker run --rm -p 3000:3000 arcblock/super-linter-api:latest",
    "setup": "./scripts/dev.sh setup",
    "clean": "./scripts/dev.sh clean",
    "clean:all": "./scripts/dev.sh clean all",
    "release": "./scripts/release.sh",
    "release:patch": "./scripts/release.sh patch",
    "release:minor": "./scripts/release.sh minor",
    "release:major": "./scripts/release.sh major",
    "precommit": "pnpm lint && pnpm type-check && pnpm test"
  },
  "keywords": [
    "linter",
    "api",
    "super-linter",
    "code-quality",
    "rest"
  ],
  "author": "wangshijun",
  "license": "MIT",
  "packageManager": "pnpm@10.6.5",
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "eslint": "^9.35.0",
    "jest": "^30.0.5",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.1",
    "supertest": "^6.3.4",
    "@types/supertest": "^2.0.16",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "compression": "^1.8.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "tar": "^7.4.3",
    "winston": "^3.17.0",
    "zlib": "^1.0.5",
    "zod": "^4.1.0"
  }
}
